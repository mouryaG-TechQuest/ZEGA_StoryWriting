# ===========================================
# ZEGA AI Services Configuration
# ===========================================
# Copy this file to .env and fill in your API keys

# ===========================================
# TEXT GENERATION (Scene AI)
# ===========================================
# At least one is required for AI scene generation

# Groq (Recommended - Fast & Free tier)
GROQ_API_KEY=gsk_your_groq_api_key

# Google Gemini
GOOGLE_API_KEY=your_google_api_key

# HuggingFace
HUGGINGFACE_API_KEY=hf_your_huggingface_token

# Ollama (Local - no key needed)
# OLLAMA_BASE_URL=http://localhost:11434

# ===========================================
# IMAGE GENERATION
# ===========================================
# All optional - Pollinations is completely FREE

# Pollinations AI (FREE - NO KEY NEEDED!)
# Uses: https://pollinations.ai

# HuggingFace (Free tier available)
# HUGGINGFACE_API_KEY=hf_your_token

# Stability AI (Free credits on signup)
STABILITY_API_KEY=sk-your_stability_key

# Replicate (Free tier available)
REPLICATE_API_TOKEN=r8_your_replicate_token

# ===========================================
# VOICE PROCESSING
# ===========================================
# All optional - Edge TTS and Whisper are FREE

# OpenAI Whisper API (optional - local Whisper is free)
OPENAI_API_KEY=sk-your_openai_key

# Azure Speech (optional - Edge TTS is free)
# AZURE_SPEECH_KEY=your_azure_speech_key
# AZURE_SPEECH_REGION=eastus

# ===========================================
# SERVICE URLS (Defaults shown)
# ===========================================
ZEGA_CORE_URL=http://localhost:8002
ZEGA_IMAGE_URL=http://localhost:8003
ZEGA_VOICE_URL=http://localhost:8004
ZEGA_DOCPARSER_URL=http://localhost:8005
ZEGA_MCP_URL=http://localhost:8006

# ===========================================
# TRAINING DATA
# ===========================================
# Enable training data collection (default: true)
COLLECT_TRAINING_DATA=true
TRAINING_DATA_PATH=./training_data

# ===========================================
# PERFORMANCE
# ===========================================
# Image generation timeout (seconds)
IMAGE_TIMEOUT=60

# Voice processing timeout (seconds)
VOICE_TIMEOUT=30

# Max concurrent requests
MAX_CONCURRENT=5
